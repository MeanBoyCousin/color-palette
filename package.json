{
    "name": "color-palette",
    "version": "1.0.0",
    "bin": {
        "color-palette": "./src/color-palette.js"
    },
    "description": "A color palette designer built from a single primary color.",
    "main": "src/color-palette.js",
    "scripts": {
        "lint": "npx eslint src/*.js --fix",
        "lint-tests": "npx eslint tests/*.test.js --fix",
        "test": "jest",
        "test-cov": "jest --coverage",
        "mutate": "stryker run",
        "dev-build": "node src/color-palette.js",
        "build": "",
        "publish-dry-run": "npm publish --dry-run"
    },
    "eslintConfig": {
        "env": {
            "commonjs": true,
            "es2020": true,
            "node": true,
            "jest": true
        },
        "extends": [
            "standard"
        ],
        "parserOptions": {
            "ecmaVersion": 11
        },
        "rules": {
            "indent": [
                "error",
                4
            ]
        }
    },
    "files": [
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MeanBoyCousin/color-palette.git"
    },
    "keywords": [
        "color",
        "palette",
        "scss",
        "mixins",
        "variables"
    ],
    "author": "Tim Dunphy",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/MeanBoyCousin/color-palette/issues"
    },
    "homepage": "https://github.com/MeanBoyCousin/color-palette#readme",
    "dependencies": {
        "chroma-js": "^2.1.0",
        "color-blend": "^3.0.0",
        "dedent": "^0.7.0",
        "inquirer": "^7.3.3",
        "list-paths": "^1.0.1"
    },
    "devDependencies": {
        "@stryker-mutator/core": "^3.3.1",
        "@stryker-mutator/javascript-mutator": "^3.3.1",
        "@stryker-mutator/jest-runner": "^3.3.1",
        "eslint": "^7.6.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "jest": "^26.2.2",
        "mock-fs": "^4.12.0"
    }
}
